{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Fastest Rubik's Cube Solves by Country",
  "width": 1200,
  "height": 700,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "fastest_solve.csv"
        },
        "key": "Country",
        "fields": ["BestSeconds", "Person"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "BestSeconds",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [4, 5, 10, 15],
        "range": ["#006d2c", "#31a354", "#74c476", "#a1d99b", "#e5f5e0"]
      },
      "title": "Solve Time (seconds)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "BestSeconds", "type": "quantitative", "title": "Best Time (seconds)"},
      {"field": "Person", "type": "nominal", "title": "Solver"}
    ]
  }
}