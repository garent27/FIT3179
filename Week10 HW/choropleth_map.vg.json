{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Interactive world map showing fastest Rubik's Cube solves by country with pan and zoom.",
  "width": 800,
  "height": 400,
  "autosize": "none",
  "padding": {"top": 50, "left": 5, "right": 100, "bottom": 5},
  "title": {
    "text": "Fastest 3x3 Rubik's Cube Solves by Country",
    "fontSize": 20,
    "font": "Arial, sans-serif",
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#333",
    "offset": 10
  },
  
  "background": "#f9f9f9",

  "signals": [
    { "name": "tx", "update": "width / 2" },
    { "name": "ty", "update": "height / 2" },
    {
      "name": "scale",
      "value": 150,
      "on": [{
        "events": {"type": "wheel", "consume": true},
        "update": "clamp(scale * pow(1.0005, -event.deltaY * pow(16, event.deltaMode)), 150, 3000)"
      }]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{
        "events": "pointerdown",
        "update": "[rotateX, centerY]"
      }]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{
        "events": "pointerdown",
        "update": "copy('projection')"
      }]
    },
    {
      "name": "start",
      "value": null,
      "on": [{
        "events": "pointerdown",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "drag", "value": null,
      "on": [{
        "events": "[pointerdown, window:pointerup] > window:pointermove",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "isDragging",
      "value": false,
      "on": [
        {
          "events": "pointerdown",
          "update": "false"
        },
        {
          "events": "[pointerdown, window:pointerup] > window:pointermove",
          "update": "true"
        },
        {
          "events": "window:pointerup",
          "update": "false"
        }
      ]
    },
    {
      "name": "delta", "value": null,
      "on": [{
        "events": {"signal": "drag"},
        "update": "[drag[0] - start[0], start[1] - drag[1]]"
      }]
    },
    {
      "name": "rotateX", "value": 0,
      "on": [{
        "events": {"signal": "delta"},
        "update": "angles[0] + delta[0]"
      }]
    },
    {
      "name": "centerY", "value": 0,
      "on": [{
        "events": {"signal": "delta"},
        "update": "clamp(angles[1] + delta[1], -60, 60)"
      }]
    },
    {
      "name": "clicked",
      "value": null,
      "on": [
        {
          "events": "pointerup",
          "update": "!isDragging ? item() : clicked",
          "force": true
        }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "equalEarth",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, 0, 0],
      "center": [0, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    }
  ],

  "data": [
    {
      "name": "rubiks_data",
      "url": "data/fastest_solve_corrected.csv",
      "format": {
        "type": "csv",
        "parse": "auto"
      }
    },
    {
      "name": "world",
      "url": "ne_110m.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
      },
      "transform": [
        { 
          "type": "lookup", 
          "from": "rubiks_data", 
          "key": "Country", 
          "fields": ["properties.NAME"], 
          "values": ["BestSeconds", "Person"]
        },
        { 
          "type": "formula", 
          "expr": "datum.BestSeconds != null ? datum.BestSeconds : 'N/A'", 
          "as": "best_time" 
        }
      ]
    },
    {
      "name": "countries_with_data",
      "source": "world",
      "transform": [
        { "type": "filter", "expr": "datum.BestSeconds != null" }
      ]
    },
    {
      "name": "countries_no_data",
      "source": "world",
      "transform": [
        { "type": "filter", "expr": "datum.BestSeconds == null" }
      ]
    },
    {
      "name": "fastest_country",
      "source": "countries_with_data",
      "transform": [
        {
          "type": "aggregate",
          "ops": ["min"],
          "fields": ["BestSeconds"],
          "as": ["min_time"]
        }
      ]
    },
    {
      "name": "fastest_country_full",
      "source": "countries_with_data",
      "transform": [
        {
          "type": "lookup",
          "from": "fastest_country",
          "key": "min_time",
          "fields": ["BestSeconds"],
          "as": ["match"]
        },
        {
          "type": "filter",
          "expr": "datum.match != null"
        },
        {
          "type": "geoshape",
          "projection": "projection",
          "as": "shape"
        },
        {
          "type": "formula",
          "expr": "geoCentroid('projection', datum)",
          "as": "centroid"
        }
      ]
    },
    {
      "name": "sea",
      "values": [{"type": "Sphere"}]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "threshold",
      "domain": [4, 8, 12, 16],
      "range": ["#cc4c02", "#ec7014", "#fe9929", "#fec44f", "#fff7bc"]
    }
  ],

  "legends": [{
    "fill": "color",
    "title": "Solve Time (seconds)",
    "titleFontSize": 13,
    "titleFontWeight": "bold",
    "titleColor": "#333",
    "titleAnchor": "start",
    "direction": "vertical",
    "orient": "right",
    "offset": 10,
    "encode": {
      "symbols": {
        "update": {
          "strokeWidth": {"value": 0.5},
          "stroke": {"value": "white"},
          "size": {"value": 120},
          "shape": {"value": "square"}
        }
      },
      "labels": {
        "update": {
          "fill": {"value": "#333"},
          "fontSize": {"value": 12},
          "fontWeight": {"value": "normal"}
        }
      },
      "title": {
        "update": {
          "fill": {"value": "#333"},
          "fontSize": {"value": 13},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  }],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "sea"},
      "encode": {
        "update": {
          "fill": {"value": "lightblue"},
          "stroke": {"value": "#D3DDDF"},
          "strokeWidth": {"value": 1}
        }
      },
      "transform": [
        {"type": "geoshape", "projection": "projection"}
      ]
    },
    {
      "type": "shape",
      "from": {"data": "countries_no_data"},
      "encode": {
        "enter": {
          "tooltip": {"signal": "'No data for ' + datum.properties.NAME"},
          "strokeWidth": {"value": 0.5},
          "stroke": {"value": "white"},
          "fill": {"value": "#CFCFCF"}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    },
    {
      "type": "shape",
      "from": {"data": "countries_with_data"},
      "encode": {
        "enter": {
          "tooltip": {
            "signal": "{title: datum.properties.NAME, 'Best Time': datum.BestSeconds + ' seconds', 'Solver': datum.Person}"
          }
        },
        "update": { 
          "fill": {"scale": "color", "field": "BestSeconds"},
          "strokeWidth": {"value": 0.5},
          "stroke": {"value": "white"}
        },
        "hover": { 
          "stroke": {"value": "black"},
          "strokeWidth": {"value": 2}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    },
    {
      "type": "text",
      "from": {"data": "fastest_country_full"},
      "encode": {
        "enter": {
          "text": {"signal": "' Fastest Country: ' + datum.properties.NAME"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fontSize": {"value": 14},
          "fontWeight": {"value": "bold"}
        },
        "update": {
          "x": {"signal": "geoCentroid('projection', datum)[0]"},
          "y": {"signal": "geoCentroid('projection', datum)[1] - 30"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "fastest_country_full"},
      "encode": {
        "enter": {
          "text": {"signal": "datum.BestSeconds + ' seconds by ' + datum.Person"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fontSize": {"value": 11},
          "fontWeight": {"value": "normal"}
        },
        "update": {
          "x": {"signal": "geoCentroid('projection', datum)[0]"},
          "y": {"signal": "geoCentroid('projection', datum)[1] - 12"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "fastest_country_full"},
      "encode": {
        "enter": {
          "size": {"value": 150},
          "shape": {"value": "circle"},
          "fill": {"value": "transparent"},
          "stroke": {"value": "#cc4c02"},
          "strokeWidth": {"value": 2.5},
          "opacity": {"value": 0.8}
        },
        "update": {
          "x": {"signal": "geoCentroid('projection', datum)[0]"},
          "y": {"signal": "geoCentroid('projection', datum)[1]"}
        }
      }
    }
  ]
}