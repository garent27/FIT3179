{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Rubik's Cube Competitions by Country",
    "fontSize": 26,
    "anchor": "start",
    "color": "black"
  },
  "padding": {"left": 0, "right": 0, "top": 0, "bottom": 0},
  "width": 1300,
  "height": 500,
  "projection": {
    "type": "equalEarth",
    "scale": {"expr": "zoom_level * (center_to == 'World' ? 1 : 2.33)"},
    "center": {
      "expr": "center_to == 'World' ? [0, 0] : center_to == 'North America' ? [-100, 45] : center_to == 'South America' ? [-60, -15] : center_to == 'Europe' ? [10, 54] : center_to == 'Asia' ? [100, 30] : center_to == 'Africa' ? [20, 0] : center_to == 'Oceania' ? [140, -25] : [0, 0]"
    }
  },
  "background": "transparent",
  "params": [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 180,
      "bind": {
        "input": "range",
        "min": 180,
        "max": 1000,
        "step": 50,
        "name": "Zoom Level: "
      }
    },
    {
      "name": "center_to",
      "value": "World",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "North America", 
          "South America",
          "Europe",
          "Asia", 
          "Africa",
          "Oceania"
        ],
        "name": "Center Map On: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "graticule": {"step": [15, 15]}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#999", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f0f0f0", "stroke": "#999", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "data/competitions_with_fastest.csv"
      },
      "transform": [
        {
          "filter": "datum.year == Year_selection"
        },
        {
          "aggregate": [{"op": "sum", "field": "competitions", "as": "total_competitions"}],
          "groupby": ["countryId"]
        },
        {
          "lookup": "countryId",
          "from": {
            "data": {
              "url": "data/country_coordinates.csv"
            },
            "key": "country",
            "fields": ["longitude", "latitude"]
          }
        },
        {
          "filter": "datum.longitude != null && datum.total_competitions > 0"
        }
      ],
      "mark": {
        "type": "circle",
        "color": "#e74c3c",
        "stroke": "#fff",
        "strokeWidth": 1,
        "opacity": 0.8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "total_competitions",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 15, 30, 50, 100, 250],
            "range": [100, 200, 400, 600, 800, 1000, 1200]
          },
          "legend": {
            "title": "Total Competitions",
            "orient": "top-right",
            "offset": 10,
            "direction": "vertical",
            "symbolSize": 80,
            "labelFontSize": 10,
            "titleFontSize": 11
          }
        },
        "tooltip": [
          {"field": "countryId", "type": "nominal", "title": "Country"},
          {"field": "total_competitions", "type": "quantitative", "title": "Total Competitions"}
        ]
      }
    },
    {
      "data": {
        "url": "data/competitions_with_fastest.csv"
      },
      "transform": [
        {
          "filter": "datum.year == Year_selection"
        },
        {
          "aggregate": [{"op": "sum", "field": "competitions", "as": "total_competitions"}],
          "groupby": ["countryId"]
        },
        {
          "lookup": "countryId",
          "from": {
            "data": {
              "url": "data/country_coordinates.csv"
            },
            "key": "country",
            "fields": ["longitude", "latitude"]
          }
        },
        {
          "filter": "datum.longitude != null && datum.total_competitions > 0"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "total_competitions", "order": "descending"}]
        },
        {
          "filter": "datum.rank == 1"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "point",
            "shape": "circle",
            "size": 150,
            "fill": "transparent",
            "stroke": "#000",
            "strokeWidth": 3
          },
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"}
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 15,
            "dy": -15,
            "fontSize": 14,
            "fontWeight": "bold",
            "fill": "#000",
            "stroke": "#fff",
            "strokeWidth": 3
          },
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "text": {
              "field": "total_competitions",
              "type": "quantitative",
              "format": ""
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 15,
            "dy": -15,
            "fontSize": 14,
            "fontWeight": "bold",
            "fill": "#000"
          },
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "text": {"value": ["Highest Total", "Competition"] }
          }
        }
      ]
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}