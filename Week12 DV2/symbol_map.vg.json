{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Rubik's Cube Competitions by Country",
    "fontSize": 20,
    "anchor": "middle"
  },
  "width": 900,
  "height": 500,
  "projection": {
    "type": "equalEarth",
    "scale": {"expr": "zoom_level"},
    "center": {
      "expr": "center_to == 'World' ? [0, 0] : center_to == 'North America' ? [-100, 45] : center_to == 'South America' ? [-60, -15] : center_to == 'Europe' ? [10, 54] : center_to == 'Asia' ? [100, 30] : center_to == 'Africa' ? [20, 0] : center_to == 'Oceania' ? [140, -25] : [0, 0]"
    }
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 150,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 1000,
        "step": 50,
        "name": "Zoom Level: "
      }
    },
    {
      "name": "center_to",
      "value": "World",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "North America", 
          "South America",
          "Europe",
          "Asia", 
          "Africa",
          "Oceania"
        ],
        "name": "Center Map On: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "graticule": {"step": [30, 30]}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#e0e0e0", "strokeWidth": 0.3}
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f0f0f0", "stroke": "#999", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "data/competitions_with_fastest.csv"
      },
      "transform": [
        {
          "filter": "datum.year == Year_selection"
        },
        {
          "aggregate": [{"op": "sum", "field": "competitions", "as": "total_competitions"}],
          "groupby": ["countryId"]
        },
        {
          "lookup": "countryId",
          "from": {
            "data": {
              "url": "data/country_coordinates.csv"
            },
            "key": "country",
            "fields": ["longitude", "latitude"]
          }
        },
        {
          "filter": "datum.longitude != null && datum.total_competitions > 0"
        }
      ],
      "mark": {
        "type": "circle",
        "color": "#e74c3c",
        "stroke": "#fff",
        "strokeWidth": 1,
        "opacity": 0.8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "total_competitions",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 15, 30, 50, 100],
            "range": [100, 200, 400, 600, 800, 1000]
          },
          "legend": {"title": "Total Competitions"}
        },
        "tooltip": [
          {"field": "countryId", "type": "nominal", "title": "Country"},
          {"field": "total_competitions", "type": "quantitative", "title": "Total Competitions"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}