{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Fastest Rubik's Cube Solve Times by Country",
  "width": 800,
  "height": 400,
  "data": {
    "url": "data/fastest_solve_corrected.csv"
  },
  "transform": [
    {
      "filter": "datum.BestSeconds != 'N/A'"
    },
    {
      "calculate": "toNumber(datum.BestSeconds)",
      "as": "BestSecondsNum"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "BestSecondsNum", "order": "ascending"}]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "mark": {
    "type": "bar",
    "color": "#31a354"
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "sort": {"field": "BestSecondsNum", "order": "ascending"},
      "title": "Country",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "BestSecondsNum",
      "type": "quantitative",
      "title": "Best Solve Time (seconds)"
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "BestSecondsNum", "type": "quantitative", "title": "Best Time", "format": ".2f"},
      {"field": "Person", "type": "nominal", "title": "Solver"}
    ]
  }
}