{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 5 Countries Rankings Over Time (2010-2025)",
    "fontSize": 20,
    "anchor": "middle"
  },
  "width": 800,
  "height": 400,
  "background": "#f9f9f9",
  "data": {
    "url": "data/fastest_3x3_top5countries.csv"
  },
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "groupby": ["year"],
      "sort": [{"field": "fastest_seconds", "order": "ascending"}]
    }
  ],
  "mark": {
    "type": "line",
    "point": true,
    "strokeWidth": 3
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "rank",
      "type": "quantitative",
      "title": "Rank",
      "scale": {
        "domain": [1, 5],
        "reverse": true
      },
      "axis": {
        "tickCount": 5
      }
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "title": "Country",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "rank", "type": "quantitative", "title": "Rank"},
      {"field": "fastest_seconds", "type": "quantitative", "title": "Best Time (s)", "format": ".2f"}
    ]
  }
}
